---
interface Props {
	title: string;
	icon: string;
	id: string;
}

const { title, icon, id } = Astro.props;
---

<article id={id}>
	<div class='icon-container'>
		<img class='icon' src={icon} alt={title} />
	</div>
	<h2>{title}</h2>
	<slot />
</article>

<style>
	article {
		max-width: 25rem;
		display: flex;
		flex-direction: column;
		border-radius: 1rem;
		box-shadow: 0 0 1rem rgba(0, 0, 0, 0.3);
		transition: transform 0.3s;
		overflow: hidden;
		text-align: center;
		align-items: center;
		color: var(--black);
		text-shadow: 0 0 0.3rem rgba(0, 0, 0, 0.1);
		z-index: 500;
		transition: 0.5s ease;
		background-color: #eef7ff;
		position: relative;
		gap: 1rem;
		padding: 0 2rem 5rem;
	}
	article:hover .icon {
		transform: perspective(1000px) rotateY(180deg) scale(1.1);
	}

	article::before {
		content: '';
		position: absolute;
		background-color: #3c5b6f;
		left: 50%;
		width: 50%;
		transform: translateX(-50%);
		height: 0.7rem;
		border-radius: 0 0 1rem 1rem;
		transition: width 3s ease-in-out;
	}
	.visible::before {
		width: 110%;
	}

	article::after {
		content: '';
		position: absolute;
		inset: 0;
	}

	.image {
		width: 100%;
		height: auto;
		object-fit: cover;
	}

	article > div {
		display: flex;
		flex-direction: column;
		align-items: center;
		position: relative;
	}
	h2 {
		font-size: 1.5rem;
		margin: 0.5rem 0;
		font-weight: lighter;
	}

	.icon-container {
		margin-top: 2.5rem;
		width: 40%;
		aspect-ratio: 1 / 1;
		border-radius: 50%;
		top: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		box-shadow: 0 0 1rem rgba(0, 0, 0, 0.3);
		padding: 1rem;
		background-color: white;
		border: 1px solid #aaa;
	}

	.icon {
		transition: transform 0.3s ease;
		width: 100%;
		height: 100%;
	}
</style>
